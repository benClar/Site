link(rel='stylesheet', type="text/css", href="/stylesheets/sidebar.css")

mixin sb(buttons)
        ul.sb_c()
            each val, index in sidebar['buttons']
                +sbButton(val['attributes'], val['text'])

mixin sbButton(button, text)
        li.sbButton_c
            a&attributes(button)= text

mixin login
    form.loginform#loginform
        |Username
        br
        input(type="text", name="username")#username
        br
        |Password
        br
        input(type="password", name="password")#password
        br
        button.logreg(type="button")#sendLogin Login
        button.logreg(type="button")#sendReg Register
